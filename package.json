{
  "name": "blink-the-ui",
  "version": "0.0.1-alpha.7",
  "description": "A simple vue3 component library",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm -C playground dev",
    "build": "pnpm -C packages/components build",
    "test": "pnpm -C packages/tests test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docs:dev": "pnpm -C docs docs:dev",
    "docs:build": "pnpm -C docs docs:build",
    "docs:preview": "pnpm -C docs docs:preview",
    "dist:animations": "pnpm -C packages/animations dist",
    "dist:components": "pnpm -C packages/components dist",
    "dist:directives": "pnpm -C packages/directives dist",
    "dist:icons": "pnpm -C packages/icons dist",
    "dist:layout": "pnpm -C packages/layout dist",
    "dist:overlays": "pnpm -C packages/overlays dist",
    "dist:all": "pnpm dist:animations && pnpm dist:components && pnpm dist:directives && pnpm dist:icons && pnpm dist:layout && pnpm dist:overlays"
  },
  "keywords": [
    "blink-the-ui",
    "vue3",
    "component-library",
    "vite",
    "typescript"
  ],
  "author": "colisys <colisys@duck.com>",
  "type": "commonjs",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@vue/tsconfig": "^0.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "vite-plugin-dts": "^4.5.4",
    "vitepress": "^1.6.4",
    "vue": "^3.5.22"
  },
  "lint-staged": {
    "*.{js,ts,json,md,vue}": [
      "prettier --write --log-level=silent"
    ]
  },
  "pnpm": {
    "overrides": {
      "@vue/language-core": "npm:@colisys/language-core@patch.1"
    }
  }
}
